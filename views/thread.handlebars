<section class="specific-thread">
    <h3 data-id="{{id}}" class="thread-name">{{title}}</h3>
    <h4 class="bold-signature">By: {{user.username}} {{format_date date_created}} {{createdAt}}</h4>
	{{#if isAuthor}}
	<button class="btn btn-info" type="button">Edit Post</button>
	<button class="btn btn-danger" type="button">Delete Post</button>
	{{/if}}
    <section class="thread-comments">
        {{#each comment as |individual-comment|}}
        {{> comment-details}}
        {{/each}}
    </section>
	<section class="add_comment">
			<form class="form formAddComment">
				<div class="form-group">
					<label for="commentBody"></label>
					<input type="text" placeholder="Add Comment" id="commentBody">
				</div>
				<div class="form-group">
					<button class="btn btn-info" type="submit">Submit Comment</button>
				</div>
			</form>
	</section>
</section>
<script src="./js/createComment.js"></script>
<script src="./js/deleteComment.js"></script>
<script src="./js/deleteThread.js"></script>

<script src="./js/editThread"></script>