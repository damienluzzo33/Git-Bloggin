<section class="specific-thread">
    <h3 data-id="{{thread.id}}" class="thread-name">{{thread.title}}</h3>
	<p>{{thread.text_body}}</p>
    <h4 class="bold-signature">By: {{thread.user.username}} {{format_date thread.date_created}} {{thread.createdAt}}</h4>
	{{#if isThreadAuthor}}
		<div class="d-flex justify-content-space-around">
			<a href="/threads/{{thread.id}}/edit"><button id="editThread" class="btn btn-info" type="button">Edit Thread</button></a>
			<button id="deleteThread" class="btn btn-danger" type="button">Delete Thread</button>
		</div>
	{{/if}}
    <section class="thread-comments">
        {{#each comments as |comment|}}
        {{>comment-details}}
			{{#if comment.isCommentAuthor}}
				<div class="d-flex justify-content-space-around">
					<button class="btn btn-info editBtn">Edit Comment</button>
					<button class="btn btn-danger deleteBtn">Delete Comment</button>
				</div>
			{{/if}}
        {{/each}}
    </section>
	<section class="add_comment">
			<form class="form formAddComment">
				<div class="form-group">
					<label for="commentBody"></label>
					<input type="text" placeholder="Add Comment" id="commentBody">
				</div>
				<div class="form-group">
					<button class="btn btn-info" type="submit">Submit Comment</button>
				</div>
			</form>
	</section>
</section>
<script src="./js/createComment.js"></script>
<script src="./js/deleteComment.js"></script>
<script src="./js/deleteThread.js"></script>
